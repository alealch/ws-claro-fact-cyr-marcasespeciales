<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="file"
        class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>/logs-apps/claro-fact-cyr-marcasEspeciales/sb-claro-fact-cyr-marcasEspeciales.log
        </File>
        <encoder
            class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%d{yyyy-MM-ddHH:mm:ss.SSS} [${weblogic.Name}]
                %X{uniqueTrackingNumber}-[%-5level]-[%logger{36}@%method.%line]-%msg%n
            </pattern>
        </encoder>
        <rollingPolicy
            class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>
                /logs-apps/claro-fact-cyr-marcasEspeciales/sb-claro-fact-cyr-marcasEspeciales.%d{yyyy-MM-dd-HH}.log
            </fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>3GB</totalSizeCap>
        </rollingPolicy>
    </appender>
    <appender name="Console-Appender"
        class="ch.qos.logback.core.ConsoleAppender">
        <layout>
            <pattern>%msg%n</pattern>
        </layout>
    </appender>
    <root level="INFO">
        <appender-ref ref="file" />
        <appender-ref ref="Console-Appender" />
    </root>
</configuration>